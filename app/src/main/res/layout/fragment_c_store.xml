<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation= "vertical"
        android:weightSum = "10"
        android:background="@color/background"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight='1.0'
            android:paddingStart="@dimen/padding_10"
            android:gravity="left|center"
            android:weightSum="2"
            android:orientation= "horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C-Store items"
                    android:drawableStart="@drawable/ic_arrow_back"
                    android:drawablePadding='@dimen/padding_5'
                    android:textSize="@dimen/fontsize_20"
                    android:paddingTop="@dimen/padding_10"
                    android:textStyle="bold"
                    android:textColor = "@color/white"
                    android:layout_gravity="bottom"
                    />


                <TextView
                    android:id="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select items to sale"
                    android:textSize="@dimen/fontsize_16"
                    android:paddingBottom="@dimen/padding_5"
                    android:textColor = "@color/white"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text="+ Add wet sale"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/fontsize_16"
                android:layout_gravity="right|center"
                android:paddingRight="@dimen/padding_10"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:layout_marginHorizontal="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_5"
            android:background="@drawable/grey_rounded_corner"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search_faded"
                android:layout_weight=".1"
                android:paddingLeft="@dimen/padding_20"

                android:paddingVertical="@dimen/padding_10"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:hint="Search a product"
                android:layout_marginLeft="@dimen/padding_10"
                android:background="@null"
                android:textColorHint="@color/status_light_grey"
                android:textColor="@color/status_light_grey"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_10"
            android:gravity="center_vertical"
            android:weightSum="3"
            >

            <Button
                android:id="@+id/btnLubricant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/button_blue"
                android:text="Lubricants"
                android:layout_marginRight="@dimen/padding_5"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_12"
                android:paddingVertical="@dimen/padding_5"
                />

            <Button
                android:id="@+id/btnBeverages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/button_grey"
                android:text="Beverages"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_12"
                android:paddingVertical="@dimen/padding_5"
                android:layout_marginRight="@dimen/padding_5"
                />
            <Button
                android:id="@+id/btnSnacks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/button_grey"
                android:text="Snacks"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_12"
                android:paddingVertical="@dimen/padding_5"
                />

        </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_100"
    android:background="@color/grey_editext"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/btnAuthorize"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_60"
        android:layout_marginHorizontal="@dimen/padding_15"
        android:background="@drawable/button_background"
        android:text="Authorise"
        android:filterTouchesWhenObscured="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/fontsize_20"
        />

</LinearLayout>


